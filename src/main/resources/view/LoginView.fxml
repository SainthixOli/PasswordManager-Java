<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController" stylesheets="@../css/styles.css">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Password Manager" styleClass="header-label"/>

    <VBox spacing="10.0" maxWidth="300">
        <Label text="Usuário"/>
        <TextField fx:id="usernameField" promptText="Digite seu usuário"/>
        
        <Label text="Senha Mestra"/>
        <PasswordField fx:id="passwordField" promptText="Digite sua senha mestra"/>
    </VBox>

    <Label fx:id="statusLabel" text="" style="-fx-text-fill: #f38ba8;" wrapText="true"/>

    <HBox spacing="15.0" alignment="CENTER">
        <Button text="Entrar" onAction="#handleLogin" defaultButton="true"/>
        <Button text="Criar Conta" onAction="#handleRegister" styleClass="button-secondary"/>
    </HBox>

    <HBox alignment="CENTER" style="-fx-padding: 20 0 0 0;">
        <javafx.scene.control.Hyperlink text="Developed by Oliver" onAction="#handleOpenGitHub" styleClass="footer-link"/>
    </HBox>
</VBox>
