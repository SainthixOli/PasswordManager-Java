<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VaultController" stylesheets="@../css/modern_styles.css" styleClass="content-area">
    
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label text="Meu Cofre" styleClass="title-label"/>
        <javafx.scene.control.TextField fx:id="searchField" promptText="ðŸ” Pesquisar..." prefWidth="300" styleClass="search-field"/>
        <HBox HBox.hgrow="ALWAYS" />
        <Button text="+ Nova Senha" onAction="#handleAddPassword" styleClass="action-button"/>
    </HBox>

    <TableView fx:id="passwordsTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="serviceColumn" text="ServiÃ§o" prefWidth="200"/>
            <TableColumn fx:id="passwordColumn" text="Senha" prefWidth="300"/>
            <TableColumn fx:id="dateColumn" text="Criado em" prefWidth="200"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="15.0" alignment="CENTER_RIGHT">
        <Button text="Copiar Senha" onAction="#handleCopyPassword" styleClass="nav-button"/>
        <Button text="Editar" onAction="#handleEditPassword" styleClass="nav-button" style="-fx-border-color: #fab387; -fx-text-fill: #fab387;"/>
        <Button text="Remover" onAction="#handleDeletePassword" styleClass="danger-button"/>
    </HBox>

</VBox>
