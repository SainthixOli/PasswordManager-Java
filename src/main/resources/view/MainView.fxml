<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController" stylesheets="@../css/styles.css">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 20;">
            <Label text="Minhas Senhas" styleClass="header-label"/>
            <Label fx:id="welcomeLabel" text="Bem-vindo, Usuário"/>
            <HBox HBox.hgrow="ALWAYS" /> <!-- Spacer -->
            <Button text="Logout" onAction="#handleLogout" styleClass="button-secondary"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <TableView fx:id="passwordsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="serviceColumn" text="Serviço" prefWidth="200"/>
                    <TableColumn fx:id="passwordColumn" text="Senha" prefWidth="300"/>
                    <TableColumn fx:id="dateColumn" text="Data de Criação" prefWidth="200"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="10.0" alignment="CENTER" style="-fx-padding: 20;">
            <HBox spacing="15.0" alignment="CENTER">
                <Button text="Adicionar Senha" onAction="#handleAddPassword"/>
                <Button text="Copiar Senha" onAction="#handleCopyPassword"/>
                <Button text="Deletar Senha" onAction="#handleDeletePassword" styleClass="button-danger"/>
            </HBox>
            <javafx.scene.control.Hyperlink text="Developed by Oliver" onAction="#handleOpenGitHub" styleClass="footer-link"/>
        </VBox>
    </bottom>
</BorderPane>
